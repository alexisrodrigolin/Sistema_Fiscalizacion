import pandas as pd

# Configura el nombre del archivo y la cantidad de filas por archivo
csv_file = "copia.csv"  # Nombre de tu archivo original
chunk_size = 5000  # Número de filas por archivo

# Cargar el archivo en partes y guardarlas por separado
for i, chunk in enumerate(pd.read_csv(csv_file, chunksize=chunk_size)):
    chunk.to_csv(f"copia_part_{i}.csv", index=False)

print("CSV dividido en partes más pequeñas.")
